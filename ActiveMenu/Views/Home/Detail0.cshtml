<div style="position:absolute; overflow:auto" class="itemparent">
    <div style="text-align:center;display: flex;justify-content: center;margin-bottom: 25px;">
        <div style="height:2px; background-color:#3aafd6; width:30%"></div>
    </div>

    @{

        if (ViewBag.istrue != "")
        {
            <div style="position:relative; display:flex; justify-content:center;margin:15px;">
                <a href="/admin/createItem?catid=@Model.id">
                    <div style=" padding:15px;color:white; background-color:#3aafd6;text-align:center; border-radius:13px">Add New Item</div>
                </a>
            </div>
        }
    }

    @foreach (var item in Model.itemList)
    {
        @Html.Partial("~/Views/Shared/ItemSection.cshtml", item);

    }
</div>
