@model ActiveMenu.ViewModel.infoVM

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layoutinfo.cshtml";
}



@section scripts{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.slim.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <link href="~/Content/slick.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            $('.your-class').slick({
                dots: false,
                arrows: false,
                infinite: true,
                speed: 300,
                slidesToShow: 1,
                centerMode: true,
                variableWidth: true
            });
        });
    </script>

    

}



<div style="" class="headerTop">
    <div class="backToList" style="">
        <div>

            <i class="fal fa-times" style=" font-size:20px; color:white"></i>
        </div>

    </div>
    <span style="flex:1"></span>
    <div style=" text-align:right; display:flex">
        <p style="margin-right:10px ; color:white;font-size:16px">داشبورد</p>

    </div>

</div>
<style>
    .infoIcon {
        background-color: orange;
        color: white;
        border-radius: 6px;
        padding: 8px;
        font-size: 20px
    }

    .infoTitle {
        color: white;
        font-size: 16px;
        margin-right: 20px
    }

    .infoTextParent {
        text-align: center;
        margin: 20px 0
    }

        .infoTextParent p {
            color: white;
            font-size: 13px;
            line-height: 2
        }

    .contactDiv {
        background-color: #434444;
        border-radius: 8px;
        border-left: 6px solid orange;
        display: flex;
        margin-bottom: 15px;
        padding: 15px;
        align-items: center;
    }

        .contactDiv i {
            color: white;
            font-size: 16px;
            margin-right: 10px
        }

        .contactDiv span {
            color: white;
            font-size: 16px;
        }

        .contactDiv a {
            color: white;
            text-decoration: none
        }
</style>
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-right" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <span class="infoTitle">درباره ما</span>   <span><i class="fal fa-info-circle infoIcon"></i></span>
                </button>
            </h2>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <div class="infoTextParent" style="">
                    <p style="color:orange">@Model.restaurant.title</p>
                    <p style="color:white">@Model.restaurant.totem</p>
                    <p style="color:white">@Model.restaurant.description</p>
                </div>
                <div class="your-class" style="margin:10px 20px">
                    @{
                        string image = Model.restaurant.imageAddress;

                        foreach (var item in image.Split(',').ToList())
                        {
                            <div style="height:250px; display:flex; justify-content:center"><img style="border-radius:30px; max-width:90%; max-height:90%; object-fit:scale-down" src="@item" /></div>
                            <div style="height:250px; display:flex; justify-content:center"><img style="border-radius:30px;max-width:90%; max-height:90%; object-fit:scale-down" src="@item" /></div>
                        }
                    }

                </div>


            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-right" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                    <span class="infoTitle">راه های ارتباطی</span>   <span><i class="fal fa-phone infoIcon"></i></span>
                </button>
            </h2>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                <div class="contactDiv">
                    <i class="fab fa-instagram"></i><span><a src="@Model.restaurant.instagram">اینستاگرام</a></span>


                </div>
                <div class="contactDiv">
                    <i class="fab fa-whatsapp"></i><span><a href=" whatsapp://send?phone=@Model.restaurant.whatsapp"> واتساپ</a></span>
                </div>
                <div class="contactDiv">
                    <i class="fa fa-phone"></i><span><a href="@Model.restaurant.phone">تلفن</a></span>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingThree">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-right" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseOne">
                    <span class="infoTitle">سفارش شما</span>   <span><i class="fal fa-file-archive infoIcon" style="padding:8px 11px"></i></span>
                </button>
            </h2>
        </div>
        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
            <div class="card-body">
              
                @Html.Action("getUserOrder")
               
            </div>
        </div>
    </div>
</div>


